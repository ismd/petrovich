a
  outline 0

.clear
  clear both

.button
  font-size 16px
  color #000
  background #ffdc18
  padding 8px 16px 9px
  border-radius 2px
  display inline-block
  transition all .2s

  &:hover
    color #000
    box-shadow 0 0 2px rgba(0, 0, 0, .1)

  &--alt-1
    font-size 22px
    font-weight bold
    color #f40000
    border 1px solid #f40000
    background transparent
    padding-top 6px
    padding-bottom 10px

    &:hover
      color #fff
      background #cc3500
      border-color #cc3500

  &--type-big
    font-size 24px
    padding 12px 24px 10px

.select
  &--type-transparent
    & + .select2
      .select2-selection
        border-color transparent
        background transparent

        &__rendered
          color #06418a

        &__arrow b
          border-top-color #06418a

      &.select2-container--open
        .select2-selection__arrow b
          border-bottom-color #06418a

        &:hover
          .select2-selection__arrow b
            border-bottom-color #cc3500

      &:hover
        .select2-selection
          &__rendered
            color #cc3500

          &__arrow b
            border-top-color #cc3500

.select2
  *
    outline 0

  &-results__option
    font-size 16px

.select2-container
  .select2-dropdown
    background #fff
    border 0
    box-shadow 10px 10px 50px rgba(0, 0, 0, 0.15)
    margin-top 10px

  &--default .select2-results__options .select2-results__option
    background-color #fff
    color #000
    padding 9px 22px 8px

    &:hover
      background-color #ffdc18

.bx-wrapper
  position relative

  .bx-viewport
    border 0
    box-shadow none

  .bx-prev,
  .bx-next
    position absolute
    top 86px

    &:hover
      opacity .7

  .bx-prev
    sprite($bx-prev)
    left -50px

  .bx-next
    sprite($bx-next)
    right -50px

.about-value-block
  font-size 19px
  background #f7f7ef
  margin-top 49px
  padding-top 42px
  padding-bottom 115px

  &__title
    font-size 24px
    font-weight bold
    line-height 1.8em
    margin-bottom 24px

  &__column
    float left
    width 560px
    padding-top 57px
    padding-left 50px

    &:first-child
      width 350px
      line-height 1.9em
      padding-top 0
      padding-left 0

  &__row
    height 150px
    padding-top 26px

    &:first-child
      padding-top 0

  &__item
    width 150px
    font-size 13px
    display inline-block
    padding-top 61px
    position relative
    line-height 1.8em
    margin-left 45px
    vertical-align top

    &:first-child
      margin-left 0

  &__icon
    position absolute
    top 0
    left 27px

    &--type-1
      sprite($about-icon-1)

    &--type-2
      sprite($about-icon-2)

    &--type-3
      sprite($about-icon-3)

    &--type-4
      sprite($about-icon-4)

    &--type-5
      sprite($about-icon-5)

    &--type-6
      sprite($about-icon-6)
      top 16px
      left 22px
