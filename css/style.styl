@require 'common'
@require 'default'
@require 'fonts'
@require 'sprite'

body
  font 24px $font

.layout
  width 960px
  margin 0 auto

.menu
  font-size 17px
  text-align center
  padding 13px 0
  border-bottom 1px solid #d1d1d1
  position fixed
  top 0
  left 0
  right 0

  &__item
    display inline-block

    & + &:before
      sprite($menu-separator)
      display inline-block
      margin 0 16px
      position relative
      top -1px
      content ''

.layout
  padding-top 47px

.header
  position relative

  &__logo
    float left
    sprite($logo-main)
    margin-top 33px

  &__title
    font-family $fontHeavy
    font-size 40px
    font-weight 900
    font-style italic
    padding 30px 10px 30px 163px
    width 590px
    text-align right

    &__honors
      font-size 11px
      font-style italic
      font-weight 400
      line-height 1.4em
      color #7e7e7e
      margin-right 20px
      padding-top 8px
      width 400px
      float right
      text-align left
      font-family $font

      &:before
        sprite($honors)
        float left
        margin-right 15px
        content ''

  &__send-resume
    position absolute
    top 40px
    right 0
