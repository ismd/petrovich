@require 'fotorama.css'
@require 'jquery.bxslider.css';
@require 'normalize.css'
@require 'common'
@require 'default'
@require 'fonts'
@require 'sprite'

body
  font 24px $font

.layout
  width 960px
  margin 0 auto

.menu
  font-size 17px
  text-align center
  padding 13px 0
  border-bottom 1px solid #d1d1d1
  position fixed
  top 0
  left 0
  right 0
  background #fff
  z-index 1000

  &__item
    display inline-block

    & + &:before
      sprite($menu-separator)
      display inline-block
      margin 0 16px
      position relative
      top -1px
      content ''

.layout
  padding-top 47px

.header
  position relative

  &__logo
    float left
    sprite($logo-main)
    margin-top 33px

  &__title
    font-family $fontHeavy
    font-size 40px
    font-weight 900
    font-style italic
    padding 30px 10px 0 163px
    width 590px
    text-align right

  &__honors
    font-size 11px
    font-style italic
    font-weight 400
    line-height 1.4em
    color #7e7e7e
    margin-left 330px
    padding-top 8px
    width 400px

    &:before
      sprite($honors)
      float left
      margin-right 15px
      content ''

  &__send-resume
    position absolute
    top 40px
    right 0

.main-slider
  margin-top 50px

  .bx-wrapper
    margin 0

  .bx-viewport
    box-shadow none
    border 0
    left 0
    border-radius 5px 5px 0 0

  &__slide
    position relative
    width 960px
    height 506px
    color #fff

  &__background
    width 100%
    height 100%
    margin-top -19px
    background -moz-linear-gradient(left, rgba(0,0,0,0.8) 0%, rgba(246,245,242,0) 100%)
    background -webkit-gradient(linear, left top, right top, color-stop(0%,rgba(0,0,0,0.8)), color-stop(100%,rgba(246,245,242,0)))
    background -webkit-linear-gradient(left, rgba(0,0,0,0.8) 0%,rgba(246,245,242,0) 100%)
    background -o-linear-gradient(left, rgba(0,0,0,0.8) 0%,rgba(246,245,242,0) 100%)
    background -ms-linear-gradient(left, rgba(0,0,0,0.8) 0%,rgba(246,245,242,0) 100%)
    background linear-gradient(to right, rgba(0,0,0,0.8) 0%,rgba(246,245,242,0) 100%)
    filter unquote('progid:DXImageTransform.Microsoft.gradient( startColorstr="#cc000000", endColorstr="#00f6f5f2",GradientType=1 )')

  &__quote
    padding 74px 38px 0
    width 440px
    font-size 19px
    line-height 1.9em
    position relative

    strong
      font-size 24px
      line-height 1.9em

    &:before
      sprite($quote-open)
      position absolute
      top 79px
      left 8px
      content ''

  &__author
    font-size 19px
    font-style italic
    color #5b594a
    margin-top -11px
    padding-left 78px

  &__pager
    background #f6f5f2
    white-space nowrap
    font-size 0

  &__pager-item
    width 25%
    height 80px
    display inline-block
    white-space normal
    vertical-align top
    font-size 13px
    color #5f5b50
    padding 17px 10px 10px 85px
    background-repeat no-repeat
    box-sizing border-box
    border 3px solid transparent
    transition border-color .3s
    line-height 1.4em

    &.active
      border-color #ffdf2e
      cursor default

      &:hover
        opacity .99

    strong
      color #0f0e0b

    &:hover
      opacity .8
      color #5f5b50

.quote
  &__close
    sprite($quote-close)
    display inline-block
    position relative
    top -7px
    left 5px
